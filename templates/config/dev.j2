{%- import '_macros.j2' as macros with context -%}

{% set config = elao_mailcatcher_config -%}

# Defaults for mailcatcher initscript
# sourced by /etc/init.d/mailcatcher
# installed at /etc/default/mailcatcher by the maintainer scripts

# Additional options that are passed to the Daemon.
DAEMON_OPTS="{{ macros.config_row(config, 'smtp-port', 25) }} {{ macros.config_row(config, 'http-ip', '0.0.0.0') }}{{ (' ' ~ macros.config(config, [
    'smtp-port',
    'http-ip'
])).rstrip() }}"
